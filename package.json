{
  "name": "fantastic-shmup",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build:clean": "rimraf ./lua",
    "build:lib": "copyFiles -u 1 \"lib/**/*\" ./lua",
    "build:assets": "copyFiles \"assets/**/*\" ./lua",
    "build:compile": "tstl -p tsconfig.json",
    "build": "npm-run-all build:clean --parallel build:assets build:lib build:compile",
    "build:watch": "tstl -p tsconfig.json --watch",
    "pack:love": "cd lua && bestzip ../dist/fantastic-shmup.love *",
    "pack:3ds:textures": "run-for-every-file --src \"assets/\" --file \"**/*.png\" --run \"tex3ds assets/{{file}} -o lua/assets/{{file-path}}/{{file-name}}.t3x\"",
    "pack:3ds:fonts": "run-for-every-file --src \"assets/\" --file \"**/*.ttf\" --run \"mkbcfnt assets/{{file}} -o lua/assets/{{file-path}}/{{file-name}}.bcfnt\"",
    "pack:3ds:only": "cat redist/3ds/lovepotion.3dsx dist/fantastic-shmup.love > dist/fantastic-shmup.3dsx",
    "pack:3ds": "run-s pack:3ds:textures pack:3ds:fonts pack:love pack:3ds:only",
    "pack:win:only" : "cat redist/win/love.exe dist/fantastic-shmup.love > dist/fantastic-shmup.exe",
    "pack:win" : "run-s pack:love pack:win:only",
    "pack:linux:only" : "cat redist/linux/love.AppImage dist/fantastic-shmup.love > dist/fantastic-shmup.AppImage",
    "pack:linux" : "run-s pack:love pack:linux:only",
    "pack:switch:only" : "cat redist/switch/love.nro dist/fantastic-shmup.love > dist/fantastic-shmup.nro",
    "pack:switch" : "run-s pack:love pack:win:only",
    "pack:all": "npm-run-all pack:love --parallel pack:win:only pack:linux:only pack:switch:only",
    "lint": "eslint",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/eslint__js": "^8.42.3",
    "bestzip": "^2.2.1",
    "copyfiles": "^2.4.1",
    "eslint": "^9.13.0",
    "npm-run-all2": "^7.0.1",
    "love-typescript-definitions": "^11.5.0",
    "rimraf": "^6.0.1",
    "run-for-every-file": "^1.1.0",
    "typescript": "5.6.2",
    "typescript-eslint": "^8.12.2",
    "typescript-to-lua": "^1.27.0"
  }
}
